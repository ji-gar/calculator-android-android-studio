<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="6"
        android:background="#000000"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:columnCount="4">
      <Button
          android:layout_width="wrap_content"
          android:layout_height="100dp"
          android:id="@+id/c"
          android:layout_columnWeight="1"
          android:text="C"
          android:gravity="center"
          android:textStyle="bold"
          android:layout_gravity="fill"
          android:layout_row="0"
          android:layout_column="0"
          android:backgroundTint="#000000"
          android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/brc"
            android:text="()"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="1"
            android:textStyle="bold"
            android:layout_gravity="fill"
            android:backgroundTint="#000000"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/per"
            android:layout_gravity="fill"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:text="%"
            android:textStyle="bold"
            android:backgroundTint="#000000"
            android:textSize="20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/dived"
            android:layout_gravity="fill"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="3"
            android:text="รท"
            android:textStyle="bold"
            android:backgroundTint="#000000"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="4"
            android:id="@+id/n4"
            android:gravity="center"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:textStyle="bold"
            android:backgroundTint="#000000"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/n5"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="5"
            android:textStyle="bold"
            android:backgroundTint="#000000"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/n6"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:gravity="center"
            android:text="6"
            android:textStyle="bold"
            android:backgroundTint="#000000"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="3"
            android:text="_"
            android:id="@+id/minus"
            android:layout_gravity="fill"
            android:textStyle="bold"
            android:backgroundTint="#000000"
            android:textSize="20dp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="100dp"
          android:text="7"
          android:id="@+id/n7"
          android:gravity="center"
          android:layout_gravity="fill"
          android:layout_row="1"
          android:layout_column="0"
          android:layout_columnWeight="1"
          android:textStyle="bold"
          android:backgroundTint="#000000"
          android:textSize="20dp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="100dp"
          android:id="@+id/n8"
          android:gravity="center"
          android:layout_row="1"
          android:layout_column="1"
          android:layout_columnWeight="1"
          android:text="8"
          android:textStyle="bold"
          android:backgroundTint="#000000"
          android:textSize="20dp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="100dp"
          android:id="@+id/n9"
          android:layout_row="1"
          android:layout_columnWeight="1"
          android:layout_column="2"
          android:layout_gravity="fill"
          android:gravity="center"
          android:text="9"
          android:textStyle="bold"
          android:backgroundTint="#000000"
          android:textSize="20dp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="100dp"
          android:gravity="center"
          android:layout_row="1"
          android:layout_column="3"
          android:text="X"
          android:id="@+id/mul"
          android:layout_gravity="fill"
          android:textStyle="bold"
          android:backgroundTint="#000000"
          android:textSize="20dp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="100dp"
          android:gravity="center"
          android:id="@+id/n1"
        android:layout_row="3"
          android:text="1"
        android:layout_column="0"
          android:layout_gravity="fill"
          android:textStyle="bold"
          android:backgroundTint="#000000"
          android:textSize="20dp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="100dp"
          android:gravity="center"
          android:id="@+id/n2"
          android:layout_row="3"
          android:text="2"
          android:layout_column="1"
          android:layout_gravity="fill"
          android:textStyle="bold"
          android:backgroundTint="#000000"
          android:textSize="20dp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="100dp"
          android:gravity="center"
          android:id="@+id/n3"
          android:layout_row="3"
          android:text="3"
          android:layout_column="2"
          android:layout_gravity="fill"
          android:textStyle="bold"
          android:backgroundTint="#000000"
          android:textSize="20dp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="100dp"
          android:gravity="center"
          android:id="@+id/plus"
          android:layout_row="3"
          android:text="+"
          android:layout_column="3"
          android:layout_gravity="fill"
          android:textStyle="bold"
          android:backgroundTint="#000000"
          android:textSize="20dp"/>
     <Button
       android:layout_width="wrap_content"
       android:layout_height="100dp"
         android:backgroundTint="#000000"
       android:layout_row="4"
       android:layout_column="0"
       android:text="0"
         android:id="@+id/z1"
         android:layout_gravity="fill"
         android:textStyle="bold"
       android:textSize="20dp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="100dp"
          android:backgroundTint="#000000"
          android:layout_row="4"
          android:layout_column="1"
          android:text=""
          android:layout_gravity="fill"
          android:textStyle="bold"
          android:textSize="20dp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="100dp"
          android:backgroundTint="#000000"
          android:layout_row="4"
          android:layout_column="2"
          android:text="."
          android:id="@+id/dot"
        android:paddingRight="50dp"
          android:layout_gravity="fill"
          android:textStyle="bold"
          android:textSize="30dp"/>
      <Button
          android:layout_width="wrap_content"
          android:layout_height="100dp"
          android:backgroundTint="#FF7F50"
          android:layout_row="4"
          android:layout_column="3"
          android:layout_columnWeight="50"
          android:text="="
          android:id="@+id/ans"
          android:layout_gravity="fill"
          android:textStyle="bold"
          android:textSize="20dp"/>








    </GridLayout>


</RelativeLayout>